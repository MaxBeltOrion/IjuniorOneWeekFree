using System;

namespace Task_1
{
    class Program
    {
        static void Main(string[] args)
        {
            int totalMoney, totalCristal;
            int priceCristal = 10;

            Console.Write("Привет путник, сколько золотых у тебя есть? - ");
            totalMoney = Convert.ToInt32(Console.ReadLine());

            Console.Write("Предлагаю купить тебе немного кристалов, сколько хочешь? - ");
            totalCristal = Convert.ToInt32(Console.ReadLine());

            totalMoney -= totalCristal * priceCristal;

            Console.Write($"Супер! Теперь у тебя есть ценная валюта, кристаллы - {totalCristal}.");
            Console.Write($"\nА деньжат поубивалось, остаток - {totalMoney}.");
        }
    }
}
