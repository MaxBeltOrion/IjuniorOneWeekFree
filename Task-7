using System;

namespace Task_1
{
    class Program
    {
        static void Main(string[] args)
        {
            int myMoney;
            int myCristal;
            int priceCristal = 10;

            Console.Write("Привет путник, сколько золотых у тебя есть? - ");
            myMoney = Convert.ToInt32(Console.ReadLine());

            Console.Write("Предлагаю купить тебе немного кристалов, сколько хочешь? - ");
            myCristal = Convert.ToInt32(Console.ReadLine());

            myMoney -= myCristal * priceCristal;

            Console.Write($"Супер! Теперь у тебя есть ценная валюта, кристаллы - {myCristal}.");
            Console.Write($"\nА деньжат поубивалось, остаток - {myMoney}.");
        }
    }
}
