using System;

namespace Task_1
{
    class Program
    {
        static void Main(string[] args)
        {
            int moneyWallet;
            int cristalsWallet;
            int priceCristal = 10;

            Console.Write("Привет путник, сколько золотых у тебя есть? - ");
            moneyWallet = Convert.ToInt32(Console.ReadLine());

            Console.Write("Предлагаю купить тебе немного кристалов, сколько хочешь? - ");
            cristalsWallet = Convert.ToInt32(Console.ReadLine());

            moneyWallet -= cristalsWallet * priceCristal;

            Console.Write($"Супер! Теперь у тебя есть ценная валюта, кристаллы - {cristalsWallet}.");
            Console.Write($"\nА деньжат поубивалось, остаток - {moneyWallet}.");
        }
    }
}
