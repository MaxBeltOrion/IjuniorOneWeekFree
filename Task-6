using System;

namespace Task_1
{
    class Program
    {
        static void Main(string[] args)
        {
            int pictureRange = 3;
            int allPictures = 52;

            int completeLine = allPictures / pictureRange;
            int leftoverPicture = allPictures % pictureRange;

            Console.WriteLine($"Полностью заполненных рядов картинами получилось - {completeLine}");
            Console.WriteLine($"Лишних картин осталось - {leftoverPicture}");
        }
    }
}
