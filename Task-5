using System;

namespace Task_1
{
    class Program
    {
        static void Main(string[] args)
        {
            string name = "Бурлык";
            string lastName = "Максим";
            string patronymic;

            Console.WriteLine($"Имя - {name}, Фамилия - {lastName}");

            patronymic = name;
            name = lastName;
            lastName = patronymic;

            Console.WriteLine($"Имя - {name}, Фамилия - {lastName}");
        }
    }
}
